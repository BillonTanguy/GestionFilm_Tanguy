<Window x:Class="GestionFilm_Tanguy.Fenetre.ActeurDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionFilm_Tanguy.Fenetre"
        xmlns:controls="clr-namespace:GestionFilm_Tanguy.UserControls"
        mc:Ignorable="d"
        Title="ActeurDetails" Height="550" Width="750">
    
    <Viewbox StretchDirection="Both" Stretch="Uniform">
        <controls:ActeurControl x:Name="ActeurControl" HorizontalAlignment="Left" VerticalAlignment="Top"
                                  SaveChangesActeur="ActeurControl_SaveChanges"
                                  AddActeur="ActeurControl_Add"
                                  Margin="10,10,10,10"
                                  Width="400"/>
    </Viewbox>
</Window>
