<Window x:Class="GestionFilm_Tanguy.Fenetre.ExplorateurFichier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionFilm_Tanguy.Fenetre"
        xmlns:controls="clr-namespace:GestionFilm_Tanguy.UserControls"
        mc:Ignorable="d"
        Title="Explorateur de Fichier" Height="450" Width="800">

    <Viewbox StretchDirection="Both" Stretch="Uniform">
        <controls:ExplorateurFichierControl x:Name="FileExplorer" HorizontalAlignment="Left" VerticalAlignment="Top"
                                  Open="ExplorateurFichier_Open"
                                  Save="ExplorateurFichier_Save"
                                  Margin="10,10,10,10"
                                  Width="400"/>
    </Viewbox>
</Window>
